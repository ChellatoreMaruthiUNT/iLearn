@page
@model iLearn.Views.Learner.DownlaodCertificateModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var fileName = "certificate.pdf";
}
<body>
    

    <div class="certificate">
        <div class="header">
            <h1>Certificate of Achievement</h1>
        </div>
        <div class="content">

            <input type="hidden" value="@Model.Course.CourseCode" id="courseCode"/>
            <img style="width:500px" src="~/images/congratualations.png" />

            <div class="recipient-info">
                <p><strong>User Name:</strong> @Model.UserName</p>
            </div>
            <div class="course-info">
                <p><strong>Course Name:</strong> @Model.Course.CourseTitle</p>
            </div>
            <div class="signature">
                <img src="~/ilearn_logo.png" alt="Official Seal">
            </div>
        </div>
        <div class="footer">
            <p>Generated by ILearn &mdash; 2023</p>
        </div>        
    </div>
    <div style="display:flex; justify-content:center; margin-top:20px">
        <a style="cursor:pointer;color:#0d6efd" id="downloadCertificateButton">Download Certificate</a>
    </div>
</body>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {


            $("#downloadCertificateButton").click(function () {
                var fileName = "certificate.pdf";
                var courseCode = $('#courseCode').val()
                $.ajax({
                    type: "GET",
                    url: '/pdf/GetCertificates?courseCode=' + courseCode,
                    contentType: "application/json; charset=utf-8",
                    success: function (r) {
                        //Convert Base64 string to Byte Array.
                        var bytes = Base64ToBytes(r);

                        //Convert Byte Array to BLOB.
                        var blob = new Blob([bytes], { type: "application/octetstream" });

                        //Check the Browser type and download the File.
                        var isIE = false || !!document.documentMode;
                        if (isIE) {
                            window.navigator.msSaveBlob(blob, fileName);
                        } else {
                            var url = window.URL || window.webkitURL;
                            link = url.createObjectURL(blob);
                            var a = $("<a />");
                            a.attr("download", fileName);
                            a.attr("href", link);
                            $("body").append(a);
                            a[0].click();
                            $("body").remove(a);
                        }
                    }
                });
            });
                function Base64ToBytes(base64) {
                    var s = window.atob(base64);
                    var bytes = new Uint8Array(s.length);
                    for (var i = 0; i < s.length; i++) {
                        bytes[i] = s.charCodeAt(i);
                    }
                    return bytes;
                };
            });
            
        </script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .certificate {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .header {
            text-align: center;
        }

        .content {
            display: flex;
            flex-direction: column;
            justify-content:center;
            align-items: center;
            margin-top: 30px;
        }

        .recipient-info {
            margin-bottom: 20px;
        }

            .recipient-info p {
                margin: 0;
            }

        .course-info {
            margin-bottom: 20px;
        }

            .course-info p {
                margin: 0;
            }

        .signature {
            display: flex;
            justify-content: space-between;
        }

            .signature img {
                max-width: 150px;
            }

        .footer {
            text-align: center;
            margin-top: 20px;
        }

            .footer p {
                margin: 0;
                font-size: 12px;
                color: #999;
            }
    </style>
    
}