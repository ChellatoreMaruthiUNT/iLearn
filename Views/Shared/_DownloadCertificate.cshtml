

<body>
    <div class="certificate">
        <div class="header">
            <h1>Certificate of Achievement</h1>
        </div>
        <div class="content">
            <img style="width:500px" src="~/images/congratualations.png" />

            <div class="recipient-info">
                <p><strong>User Name:</strong> @User.Identity.Name</p>
            </div>
            <div class="course-info">
                <p><strong>Course Name:</strong> @ViewData["StringData"]</p>
            </div>
            <div class="signature">
                <img src="~/ilearn_logo.png" alt="Official Seal">
            </div>
        </div>
        <div class="footer">
            <p>Generated by ILearn &mdash; 2023</p>
        </div>
    </div>
</body>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .certificate {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .header {
            text-align: center;
        }

        .content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-top: 30px;
        }

        .recipient-info {
            margin-bottom: 20px;
        }

            .recipient-info p {
                margin: 0;
            }

        .course-info {
            margin-bottom: 20px;
        }

            .course-info p {
                margin: 0;
            }

        .signature {
            display: flex;
            justify-content: space-between;
        }

            .signature img {
                max-width: 150px;
            }

        .footer {
            text-align: center;
            margin-top: 20px;
        }

            .footer p {
                margin: 0;
                font-size: 12px;
                color: #999;
            }
    </style>

}